{% extends 'base.html.twig' %}

{% block title %}Mes groupes{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('homepage') }}">Gestionnaire de T√¢ches</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="{{ path('homepage') }}">Accueil</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('task_admin') }}">Admin</a></li>
                    {% endif %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('task_history') }}">Historique</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('user_profile') }}">Profil</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('logout') }}">D√©connexion</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <p class="mb-2 fs-5">
            Bienvenue, <strong>{{ app.user.username }}</strong> üëã
        </p>

        <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center">
            <h2 class="mb-0">Mes groupes</h2>
            <div class="d-flex gap-2">
                <a href="{{ path('task_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Nouvelle t√¢che
                </a>
                <a href="{{ path('group_new') }}" class="btn btn-outline-primary">
                    <i class="bi bi-folder-plus me-1"></i> Nouveau groupe
                </a>
            </div>
        </div>

        <form method="get" action="{{ path('task_index') }}" class="row g-3 mt-3 search-filters">
            <div class="col-md-9">
                <input type="text" name="searchGroup" value="{{ searchName }}" class="form-control" placeholder="Rechercher un groupe par nom">
            </div>
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary btn-lg w-50">
                    <i class="bi bi-search"></i>
                </button>
                <a href="{{ path('task_index') }}" class="btn btn-outline-secondary btn-lg w-50">
                    <i class="bi bi-arrow-counterclockwise"></i>
                </a>
            </div>
        </form>

        <div class="row g-3 mt-2">
            {% for g in groups %}
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title mb-2">
                                    {% if g.color %}<span class="badge me-2" style="background:{{ g.color }}">&nbsp;</span>{% endif %}
                                    {{ g.name }}
                                </h5>
                                <div class="d-flex gap-2">
                                    {% if g.name != 'Sans groupe' %}
                                        <a href="{{ path('group_edit', {id: g.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    {% endif %}

                                    {% if g.name != 'Sans groupe' %}
                                        <form method="post"
                                              action="{{ path('group_delete', {id: g.id}) }}"
                                              class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('del-group-' ~ g.id) }}">
                                            <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="text-muted small">
                                {% set total = g.tasks|length %}
                                {% set done  = g.tasks|filter(t => t.status == 'terminee')|length %}
                                {% set todo = total - done %}
                                {{ total }} t√¢ches ‚Ä¢ {{ done }} termin√©es ‚Ä¢ {{ todo }} √† faire
                            </div>

                            {% if g.description %}
                                <p class="mt-2 mb-0">{{ g.description }}</p>
                            {% endif %}

                            <div class="mt-auto d-flex justify-content-between align-items-center pt-3">
                                <a href="{{ path('group_tasks', { id: g.id }) }}" class="btn btn-primary btn-sm">
                                    <i class="bi bi-list-task me-1"></i> Voir les t√¢ches
                                </a>

                                <a href="{{ path('task_new', {'group': g.id}) }}" class="btn btn-sm btn-success">
                                    <i class="bi bi-plus-circle me-1"></i> Ajouter une t√¢che
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-muted">Aucun groupe pour le moment.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
