<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/bootstrap/css/bootstrap.purged.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        <link rel="shortcut icon" href="{{ asset('assets/images/logo.png') }}" type="image/svg+xml">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="container mt-3">
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}

    {% block footer %}
        <footer class="bg-dark text-white text-center py-3 mt-auto">
            <div class="container">
                <p>2025 | Created by Walid Bakkioui</p>
            </div>
        </footer>
    {% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}
    {% set consent = app.request.cookies.get('cookie_consent') %}
    {% if consent is not same as('1') and consent is not same as('0') %}
        <div id="cookie-banner" class="position-fixed bottom-0 start-0 end-0 p-3" style="z-index:1080;">
            <div class="toast show w-100">
                <div class="toast-body d-flex justify-content-between align-items-center">
                    Ce site utilise des cookies pour m√©moriser vos filtres.
                    <div class="ms-3">
                        <button id="cookie-accept" class="btn btn-sm btn-primary">Accepter</button>
                        <button id="cookie-decline" class="btn btn-sm btn-outline-secondary">Refuser</button>
                    </div>
                </div>
            </div>
        </div>
        <script>
            (function(){
                const banner = document.getElementById('cookie-banner');
                function setCookie(name, value, maxAge) {
                    document.cookie = name + "=" + encodeURIComponent(value)
                        + "; path=/; samesite=Lax"
                        + (location.protocol === "https:" ? "; secure" : "")
                        + (maxAge ? "; max-age=" + maxAge : "");
                }
                function deleteCookie(name){
                    document.cookie = name + "=; path=/; max-age=0; samesite=Lax"
                        + (location.protocol === "https:" ? "; secure" : "");
                }
                function wipeComfortCookies(){
                    document.cookie.split(";").forEach(function(c){
                        const n = c.split("=")[0].trim();
                        if (n.startsWith("h_") || n.startsWith("gt_")) deleteCookie(n);
                    });
                }
                document.getElementById('cookie-accept')?.addEventListener('click', function(){
                    setCookie('cookie_consent','1',60*60*24*180);
                    banner?.remove(); // ou: location.reload();
                });
                document.getElementById('cookie-decline')?.addEventListener('click', function(){
                    setCookie('cookie_consent','0',60*60*24*180);
                    wipeComfortCookies(); // on efface les cookies de confort existants
                    banner?.remove(); // ou: location.reload();
                });
            })();
        </script>
    {% endif %}

</body>
</html>
