{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow p-4" style="width: 100%; max-width: 450px;">
            <h2 class="text-center mb-4">Mot de passe oublié</h2>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            <form method="post" action="{{ path('forgot_password') }}">
                <div class="mb-3">
                    <label for="email" class="form-label">Entrez votre adresse email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="nom@exemple.com" required>
                </div>

                <button type="submit" class="btn btn-success w-100">Envoyer un lien de réinitialisation</button>
            </form>

            <div class="text-center mt-3">
                <a href="{{ path('login') }}">Retour à la connexion</a>
            </div>
        </div>
    </div>
{% endblock %}
